@{
}

@model DynamicTimeTable.Models.TimetableModel

@{
    ViewData["Title"] = "Dynamic Timetable";
}

<h2>Enter Timetable Details</h2>
<form method="post" asp-action="GenerateTimetable">
    <div>
        <label>Working Days:</label>
        <input asp-for="WorkingDays" type="number" required />
        <span asp-validation-for="WorkingDays"></span>
    </div>

    <div>
        <label>Subjects Per Day:</label>
        <input asp-for="SubjectsPerDay" type="number" required />
        <span asp-validation-for="SubjectsPerDay"></span>
    </div>

    <div>
        <label>Total Subjects:</label>
        <input asp-for="TotalSubjects" type="number" required />
        <span asp-validation-for="TotalSubjects"></span>
    </div>

    <button type="submit">Next</button>
</form>
