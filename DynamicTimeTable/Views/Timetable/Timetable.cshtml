</style>
<h2>Final Timetable</h2>

<table border="1">
    <thead>
        <tr>
            @for (int i = 1; i <= Model.WorkingDays; i++)
            {
                <th>Day @i</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.GeneratedTimetable)
        {
            <tr>
                @foreach (var subject in row)
                {
                    <td>@subject</td>
                }
            </tr>
        }
    </tbody>
</table>
